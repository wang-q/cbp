{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CBP Package Configuration Schema",
  "description": "Schema for CBP package configuration files",
  "type": "object",
  "required": [
    "name",
    "version",
    "description",
    "homepage",
    "license",
    "type"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[a-z][a-z0-9.-]*$",
      "description": "Package name, lowercase letters, numbers, dots and hyphens only, must start with a letter"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+(\\.\\d+)?(-[a-zA-Z0-9]+)?$",
      "description": "Version number in x.y.z or x.y format, with optional suffix"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "description": "Brief description of the package"
    },
    "homepage": {
      "type": "string",
      "format": "uri",
      "description": "Project homepage URL"
    },
    "license": {
      "type": "string",
      "description": "License identifier"
    },
    "type": {
      "type": "string",
      "enum": [
        "prebuild",
        "rust",
        "make",
        "cmake",
        "autotools",
        "vcpkg",
        "source"
      ],
      "description": "Build type of the package"
    },
    "downloads": {
      "type": "object",
      "oneOf": [
        {
          "required": [
            "source"
          ],
          "properties": {
            "source": {
              "type": "object",
              "required": [
                "url"
              ],
              "properties": {
                "url": {
                  "type": "string",
                  "format": "uri",
                  "description": "Source code download URL"
                },
                "rename": {
                  "type": "object",
                  "patternProperties": {
                    "^.*$": {
                      "type": "string"
                    }
                  },
                  "description": "File renaming rules"
                },
                "clean": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "Patterns of files to be removed"
                }
              }
            }
          }
        },
        {
          "anyOf": [
            {
              "required": [
                "linux"
              ]
            },
            {
              "required": [
                "macos"
              ]
            },
            {
              "required": [
                "windows"
              ]
            }
          ],
          "properties": {
            "linux": {
              "$ref": "#/definitions/platformDownload"
            },
            "macos": {
              "$ref": "#/definitions/platformDownload"
            },
            "windows": {
              "$ref": "#/definitions/platformDownload"
            }
          }
        }
      ]
    },
    "tests": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "command",
          "pattern"
        ],
        "properties": {
          "name": {
            "type": "string",
            "description": "Test name"
          },
          "command": {
            "type": "string",
            "description": "Command to execute"
          },
          "pattern": {
            "type": "string",
            "description": "Regular expression pattern to match in command output"
          },
          "args": {
            "type": "string",
            "description": "Command line arguments"
          },
          "ignore_exit_code": {
            "type": "boolean",
            "description": "Whether to ignore non-zero exit codes"
          }
        }
      }
    }
  },
  "definitions": {
    "platformDownload": {
      "type": "object",
      "required": [
        "url"
      ],
      "properties": {
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Download URL for the platform"
        },
        "binary": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ],
          "description": "Binary file name or array of names"
        },
        "extract": {
          "type": "string",
          "description": "Custom extraction command"
        }
      }
    }
  }
}
